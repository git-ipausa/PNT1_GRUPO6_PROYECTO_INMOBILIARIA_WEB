@model PNT1_GRUPO6_PROYECTO_INMOBILIARIA_WEB.PropiedadAlquiler

@{
    ViewData["Title"] = "Alquilar";
}

<div>
    <h4>Propiedad a Alquilar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantMeses)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantMeses)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dd class="card" style="width: 18rem;">
            <img class="img-fluid img-thumbnail" src="@Model.FotoPropiedadUrl" />
        </dd>
       
    </dl>
</div>

<div class="col-md-4">
    <form method="post" asp-action="Alquilar" asp-controller="PropiedadAlquiler">

        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.usuario)
            </div>
            <select asp-for="usuario" class="form-control" asp-items="@(new SelectList(ViewBag.ListaUsuarios,"IdUsuario", "Nombre"))">
                <option selected="selected" value="">Seleccione</option>
            </select>
        </div>
        <br>
        <div class="row">
            <input type="hidden" asp-for = "IdPropiedad" />
            <input type="submit" value="Firmar contrato" class="btn btn-primary" /> |
            <a class="btn btn-primary" asp-action="Index">Volver a la lista</a>
        </div>
    </form>
</div>

