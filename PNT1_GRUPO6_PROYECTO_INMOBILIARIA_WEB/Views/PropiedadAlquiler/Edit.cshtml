@model PNT1_GRUPO6_PROYECTO_INMOBILIARIA_WEB.PropiedadAlquiler

@{
    ViewData["Title"] = "Edit";
}

<h1>Modificar</h1>

<h4>Propiedad en Alquiler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CantMeses" class="control-label"></label>
                <input asp-for="CantMeses" class="form-control" />
                <span asp-validation-for="CantMeses" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="IdPropiedad" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoPropiedad" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="FotoPropiedad" class="custom-file-input" id="customFile" type="file">
                    <label class="custom-file-label" for="customInput">Select file</label>
                </div>
                <span asp-validation-for="FotoPropiedad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoPropiedad>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
