@model PNT1_GRUPO6_PROYECTO_INMOBILIARIA_WEB.PropiedadVenta

@{
    ViewData["Title"] = "Comprar";
}

<div>
    <h4>Propiedad a Comprar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dd class="card" style="width: 18rem;">
            <img class="img-fluid img-thumbnail" src="@Model.FotoPropiedadUrl" />
        </dd>
       
    </dl>
</div>

<div class="col-md-4">   
        <form method="post" enctype="multipart/form-data" asp-action="Comprar" asp-controller="PropiedadVenta">

            <div class="row">
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.usuario)
                </div>
                <select asp-for="usuario.IdUsuario" class="form-control" asp-items="@(new SelectList(ViewBag.ListaUsuarios,"IdUsuario", "Nombre"))">
                    <option selected="selected" value="">Seleccione</option>
                </select>
            </div>
            <br>
            <div class="row">
                <input type="hidden" asp-for="IdPropiedad" value="@Model.IdPropiedad" />
                <input type="submit" value="Firmar contrato" class="btn btn-primary" /> |
                <a class="btn btn-primary" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}